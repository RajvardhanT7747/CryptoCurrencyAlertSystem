<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Cryptocurrency - CryptoAlert Pro</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Background Animation -->
    <div class="bg-animation"></div>
    <div class="particles"></div>

    <!-- Header -->
    <header class="header">
        <div class="container">
            <h1><i class="fas fa-plus me-3"></i>Add Cryptocurrency</h1>
            <p class="text-center text-secondary mb-0">Add new cryptocurrencies to your monitoring list</p>
        </div>
    </header>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Add Crypto Card -->
                <div class="card fade-in">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-coin me-2"></i>Add New Cryptocurrency</h5>
                    </div>
                    <div class="card-body">
                        <form id="addCryptoForm" action="/add-crypto" method="POST">
                            <!-- Cryptocurrency Name -->
                            <div class="mb-4">
                                <label for="name" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Cryptocurrency Name
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-coin"></i>
                                    </span>
                                    <input type="text" 
                                           id="name" 
                                           name="name" 
                                           class="form-control" 
                                           placeholder="Enter cryptocurrency name (e.g., Bitcoin, Ethereum)"
                                           required>
                                </div>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Enter the full name of the cryptocurrency
                                </div>
                            </div>

                            <!-- Cryptocurrency Symbol -->
                            <div class="mb-4">
                                <label for="symbol" class="form-label">
                                    <i class="fas fa-code me-2"></i>Cryptocurrency Symbol
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-hashtag"></i>
                                    </span>
                                    <input type="text" 
                                           id="symbol" 
                                           name="symbol" 
                                           class="form-control" 
                                           placeholder="Enter symbol (e.g., BTC, ETH, ADA)"
                                           required>
                                </div>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Enter the symbol used by CoinGecko API (usually lowercase)
                                </div>
                                <small id="symbolError" class="text-danger" style="display: none">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Invalid cryptocurrency symbol!
                                </small>
                            </div>

                            <!-- Live Price Preview -->
                            <div class="mb-4">
                                <div class="alert alert-info">
                                    <h6 class="alert-heading">
                                        <i class="fas fa-chart-line me-2"></i>Live Price Preview
                                    </h6>
                                    <div id="pricePreview">
                                        <p class="mb-0">Enter a valid cryptocurrency symbol to see the current price...</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="fas fa-plus me-2"></i>Add Cryptocurrency
                                </button>
                                <a href="/" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Popular Cryptocurrencies -->
                <div class="card mt-4 fade-in" data-animation-delay="0.2s">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-star me-2"></i>Popular Cryptocurrencies</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <div class="crypto-icon me-3">
                                        <i class="fas fa-bitcoin text-warning fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Bitcoin</h6>
                                        <small class="text-secondary">BTC</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary" onclick="fillCrypto('Bitcoin', 'bitcoin')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <div class="crypto-icon me-3">
                                        <i class="fas fa-ethereum text-info fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Ethereum</h6>
                                        <small class="text-secondary">ETH</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary" onclick="fillCrypto('Ethereum', 'ethereum')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <div class="crypto-icon me-3">
                                        <i class="fas fa-coins text-success fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Cardano</h6>
                                        <small class="text-secondary">ADA</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary" onclick="fillCrypto('Cardano', 'cardano')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center p-3 border rounded">
                                    <div class="crypto-icon me-3">
                                        <i class="fas fa-rocket text-danger fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Solana</h6>
                                        <small class="text-secondary">SOL</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary" onclick="fillCrypto('Solana', 'solana')">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/app.js"></script>
    
    <script>
        // Fill crypto form with popular cryptocurrency
        function fillCrypto(name, symbol) {
            document.getElementById('name').value = name;
            document.getElementById('symbol').value = symbol;
            updatePricePreview();
        }

        // Update price preview
        async function updatePricePreview() {
            const symbol = document.getElementById('symbol').value.trim().toLowerCase();
            const preview = document.getElementById('pricePreview');
            
            if (!symbol) {
                preview.innerHTML = '<p class="mb-0">Enter a valid cryptocurrency symbol to see the current price...</p>';
                return;
            }

            preview.innerHTML = '<p class="mb-0"><i class="fas fa-spinner fa-spin me-2"></i>Fetching price...</p>';

            try {
                const response = await axios.get(
                    `https://api.coingecko.com/api/v3/simple/price?ids=${symbol}&vs_currencies=usd`
                );

                if (response.data[symbol]) {
                    const price = response.data[symbol].usd;
                    preview.innerHTML = `
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <span class="crypto-symbol">${symbol.toUpperCase()}</span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="price mb-1">$${price.toLocaleString()}</div>
                                <small class="text-secondary">Current market price</small>
                            </div>
                            <div class="text-success">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    `;
                    document.getElementById('symbolError').style.display = 'none';
                } else {
                    preview.innerHTML = `
                        <div class="d-flex align-items-center">
                            <div class="text-danger me-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div>
                                <p class="mb-0 text-danger">Invalid cryptocurrency symbol</p>
                                <small class="text-secondary">Please check the symbol and try again</small>
                            </div>
                        </div>
                    `;
                    document.getElementById('symbolError').style.display = 'block';
                }
            } catch (error) {
                preview.innerHTML = `
                    <div class="d-flex align-items-center">
                        <div class="text-warning me-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <div>
                            <p class="mb-0 text-warning">Error fetching price</p>
                            <small class="text-secondary">Please check your internet connection</small>
                        </div>
                    </div>
                `;
            }
        }

        // Form validation
        document.getElementById('addCryptoForm').addEventListener('submit', async function(event) {
            const symbolInput = document.getElementById('symbol');
            const symbolError = document.getElementById('symbolError');
            const symbol = symbolInput.value.trim().toLowerCase();

            if (!symbol) {
                event.preventDefault();
                symbolError.textContent = 'Please enter a cryptocurrency symbol';
                symbolError.style.display = 'block';
                return;
            }

            try {
                const response = await axios.get(
                    `https://api.coingecko.com/api/v3/simple/price?ids=${symbol}&vs_currencies=usd`
                );

                if (response.data[symbol]) {
                    symbolError.style.display = 'none';
                    showToast('Cryptocurrency added successfully!', 'success');
                } else {
                    event.preventDefault();
                    symbolError.textContent = 'Invalid cryptocurrency symbol!';
                    symbolError.style.display = 'block';
                }
            } catch (err) {
                event.preventDefault();
                symbolError.textContent = 'Error validating symbol. Please try again.';
                symbolError.style.display = 'block';
            }
        });

        // Real-time price preview updates
        document.getElementById('symbol').addEventListener('input', updatePricePreview);

        // Toast notification function
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            
            const toast = document.createElement('div');
            toast.className = `toast show bg-${type === 'error' ? 'danger' : type === 'success' ? 'success' : 'info'} text-white`;
            toast.innerHTML = `
                <div class="toast-header">
                    <strong class="me-auto">${type.charAt(0).toUpperCase() + type.slice(1)}</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 5000);
        }

        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
            return container;
        }
    </script>
</body>
</html>
