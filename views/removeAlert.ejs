<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Remove Alert</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container my-5">
      <h1 class="text-center mb-4">Remove Alert</h1>

      <% if (alerts.length > 0) { %>
      <div class="list-group">
        <% alerts.forEach(alert => { %>
        <div
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <div>
            <strong>Symbol:</strong> <%= alert.cryptoSymbol %> |
            <strong>Threshold:</strong> $<%= alert.thresholdPrice %> |
            <strong>Email:</strong> <%= alert.email %>
          </div>
          <form action="/remove-alert" method="POST">
            <input type="hidden" name="alertId" value="<%= alert._id %>" />
            <button class="btn btn-danger btn-sm" type="submit">Remove</button>
          </form>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No alerts to remove.
      </div>
      <% } %>

      <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Go Back</a>
      </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
